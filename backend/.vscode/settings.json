{
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "strict",
    // LINT (you must install pylint vscode extension)
    // "mypy.configFile": "${workspaceFolder}/pyproject.toml",
    "mypy.dmypyExecutable": "${workspaceFolder}/venv/bin/dmypy",
    "mypy.runUsingActiveInterpreter": true,
    // FORMATTER (you must install black-formatter vscode extension)
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    }
}